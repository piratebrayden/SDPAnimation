{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug (gdb)",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/game.exe",
			"args": [],
			"stopAtEntry": true,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": true,
			"preLaunchTask": "build debug",
			"MIMode": "gdb",
			"miDebuggerPath": "C:\\MinGW\\mingw32\\bin\\gdb.exe",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"logging": {
				"trace": true,
				"traceResponse": true,
				"engineLogging": true
			}
		},
		{
			"name": "Run (no debug)",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/game.exe",
			"args": [],
			"cwd": "${workspaceFolder}",
			"externalConsole": true,
			"preLaunchTask": "build",
			"MIMode": "gdb",
			"miDebuggerPath": "C:\\MinGW\\mingw32\\bin\\gdb.exe",
			"stopAtEntry": false
		}
	]
}